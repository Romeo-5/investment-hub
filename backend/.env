# Investment Hub Backend - Environment Variables
# These are working defaults for local development

# API Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security (change these in production!)
SECRET_KEY=dev-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Schwab API (fill these in when you get API access)
SCHWAB_API_KEY=
SCHWAB_API_SECRET=
SCHWAB_REDIRECT_URI=http://localhost:3000/callback

# Database (optional - for caching/storage)
DATABASE_URL=sqlite:///./investment_hub.db

# External APIs (optional - for market data)
ALPHA_VANTAGE_API_KEY=
YAHOO_FINANCE_ENABLED=True

# ML Settings
ENABLE_ML_PREDICTIONS=True
MODEL_CACHE_DIR=./models

# CORS - Allow requests from your Next.js frontend
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO